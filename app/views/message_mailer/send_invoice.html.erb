  <!--[if t]><![endif]--><!--[if t]><![endif]--><!--[if t]><![endif]--><!--[if t]><![endif]--><!--[if t]><![endif]--><!--[if t]><![endif]-->
  <table align="center" border="0" cellpadding="0" cellspacing="0" height="100%" width="100%"  bgcolor="#f2f2f2" style="margin:0; padding:0px; width:100% !important; background: #f2f2f2 !important;">
    <tr>
      <td class="wrap" align="center" valign="top" width="100%">
        <center>
          <!-- content -->
            <div  style="padding:0px">
              <table align="center" cellpadding="0" cellspacing="0" border="0" width="100%" bgcolor="transparent"  style="background-color:transparent">
                <tr>
                  <td valign="top"  style="padding:0px">
                    <table cellpadding="0" cellspacing="0" width="600" align="center"  style="max-width:600px;min-width:240px;margin:0 auto;border-radius: 1px;box-shadow: 0 6px 12px 0 rgba(30, 30, 30, 0.05); margin-top: 50px;font-size: 14px;" class="email-root-wrapper">
                      <tr>
                        <td valign="top"  style="padding: 20px; background: #ffffff; border-radius: 1px;">
                          <table cellpadding="0" cellspacing="0" border="0" width="100%">
                            <tr>
                              <td valign="top"  style="padding:0">
                                <table style="width: 100%">
                                  <tr>
                                    <td>
                                      <b>Ship Date Required</b><br>
                                      <%= @po_item.required_ship_date %>
                                    </td>
                                    <td>
                                      <b>Shipping address</b><br>
                                      <%= @po_item.shipping_address %>
                                    </td>
                                    <td>
                                      <b>Shipping method</b><br>
                                      <%= @po_item.shipping_method %>
                                    </td>
                                  </tr>
                                  <tr>
                                    <td>
                                      <b>PO #</b><br>
                                      <%= @po.id %>
                                    </td>
                                    <td>
                                      <b>PO Date</b><br>
                                      <%= @po_item.created_at.strftime('%b %-d, %Y') %>
                                    </td>
                                    <td>
                                      <b>Supplier</b><br>
                                      <%= @vendor.company_name %>
                                    </td>
                                  </tr>
                                  <tr>
                                    <td colspan="3">
                                      <b>Notes</b><br>
                                      <%= @po_item.notes %>
                                    </td>
                                  </tr>
                                </table>
                                <br>
                                <br>

                                <h1>Order Details</h1>
                                <% total_qty = 0 %>
                                <% total_costs = 0 %>
                                <% total_setup_cost = 0 %>
                                <% total_run_charge = 0 %>
                                <% @po_item.purchase_order_line_items.each do |line_item| %>
                                  <% variant = line_item.variant %>
                                  <% price_rule = variant.get_price_rule(line_item.qty) %>
                                  <% total_qty += line_item.qty %>
                                  <% total_costs += line_item.unit_cost * line_item.qty %>
                                  <% total_setup_cost += line_item.setup_unit_price * line_item.setup_qty %>
                                  <% total_run_charge += (line_item.run_unit_price || 0) * (line_item.run_qty || 0) %>
                                  <table style="text-align: left;width: 100%">
                                    <thead>
                                      <tr>
                                        <th style="max-width: 150px">SKU</th>
                                        <th>ITEM</th>
                                        <th>QTY</th>
                                        <th>UNIT COST</th>
                                        <th>TOTAL COST</th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                      <tr>
                                        <td style="max-width: 150px"><%= variant.sku %></td>
                                        <td>
                                          <%= variant.product.title %>
                                          <% if variant.option_1 != 'Default Title' %>
                                            <%= "(#{[variant.option_1, variant.option_2, variant.option_3].reject(&:blank?).join(' x ')})" %>
                                          <% end %>
                                        </td>
                                        <td><%= line_item.qty %></td>
                                        <td><%= number_to_currency(line_item.unit_cost) %></td>
                                        <td><%= number_to_currency(line_item.unit_cost * line_item.qty) %></td>
                                      </tr>
                                    </tbody>
                                  </table>
                                  <table style="text-align: left;width: 100%">
                                    <thead>
                                      <tr>
                                        <th>ARTWORK COSTS</th>
                                        <th>QTY</th>
                                        <th>UNIT PRICE</th>
                                        <th>TOTAL PRICE</th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                      <tr>
                                        <td>Setup Cost</td>
                                        <td><%= line_item.setup_qty %></td>
                                        <td><%= number_to_currency(line_item.setup_unit_price) %></td>
                                        <td><%= number_to_currency(line_item.setup_unit_price * line_item.setup_qty) %></td>
                                      </tr>
                                      <tr>
                                        <td>Run Charge</td>
                                        <td><%= line_item.run_qty %></td>
                                        <td><%= number_to_currency(line_item.run_unit_price) %></td>
                                        <td><%= number_to_currency((line_item.run_unit_price || 0) * (line_item.run_qty || 0)) %></td>
                                      </tr>
                                    </tbody>
                                  </table>
                                  <hr>
                                  <br>
                                <% end %>

                                <table style="text-align: left;width: 100%">
                                  <tr>
                                    <td></td>
                                    <td width="280">
                                      <table style="width: 100%">
                                        <tr>
                                          <td><b>TOTAL UNITS ORDERED</b></td>
                                          <td style="text-align: right;"><%= total_qty %></td>
                                        </tr>
                                        <tr>
                                          <td><b>TOTAL UNIT COSTS</b></td>
                                          <td style="text-align: right;"><%= number_to_currency(total_costs) %></td>
                                        </tr>
                                        <tr>
                                          <td><b>TOTAL SETUP COST</b></td>
                                          <td style="text-align: right;"><%= number_to_currency(total_setup_cost) %></td>
                                        </tr>
                                        <tr>
                                          <td><b>TOTAL RUN CHARGE</b></td>
                                          <td style="text-align: right;"><%= number_to_currency(total_run_charge) %></td>
                                        </tr>
                                        <tr>
                                          <td><b>ORDER TOTAL</b></td>
                                          <td style="text-decoration: overline;text-align: right;"><%= number_to_currency(total_costs + total_setup_cost + total_run_charge) %></td>
                                        </tr>
                                      </table>
                                    </td>
                                  </tr>
                                </table>
                              </td>
                            </tr>
                          </table>
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
              </table>
            </div>
            <!-- content end -->
          </center>
        </td>
    </tr>
  </table>
